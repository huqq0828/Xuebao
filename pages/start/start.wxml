<swiper class="swiper_box" bindchange="swiperchange" indicator-dots="true" indicator-active-color="#fff">
  <swiper-item wx:for="{{banners}}" wx:key="id">
    <image mode="aspectFill" bindtap="imgClick" src="{{item.picUrl}}" />
  </swiper-item>
</swiper>
<view class="btn">
  <button wx:if="{{swiperCurrent + 1 == swiperMaxNumber}}" type="primary" size="mini" bindtap="goToIndex"  style="background-color: #5e85da; font-size: 30rpx">进入雪宝</button>
</view>